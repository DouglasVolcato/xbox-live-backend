// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  user_id    String    @id @unique
  name       String
  email      String    @unique
  password   String
  cpf        String?
  is_admin   Boolean
  created_at DateTime
  updated_at DateTime
  profile    profile[]
  game       game[]
}

model profile {
  profile_id             String                   @id @unique
  title                  String
  image_url              String
  created_at             DateTime
  updated_at             DateTime
  user_id                String
  user                   user                     @relation(fields: [user_id], references: [user_id])
  profile_favorite_games profile_favorite_games[]
}

model game {
  game_id                String                   @id @unique
  title                  String
  coverImageUrl          String
  description            String
  year                   Int
  imdbScore              Float
  trailerYouTubeUrl      String
  gameplayYouTubeUrl     String
  created_at             DateTime
  updated_at             DateTime
  user_id                String
  user                   user                     @relation(fields: [user_id], references: [user_id])
  profile_favorite_games profile_favorite_games[]
}

model profile_favorite_games {
  profile_id String  @id
  profile    profile @relation(fields: [profile_id], references: [profile_id])
  game_id    String
  game       game    @relation(fields: [game_id], references: [game_id])
}
